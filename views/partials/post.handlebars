<a href="/api/posts/{{id}}">
    <div class="container grey darken-4">
        <div class="row">
            <div class="col s12">
                <img class="responsive-img thumbnail" src="{{image_key}}" alt="{{alt_text}}" />
            </div>
        </div>
        <div class="row white-text center-align">
            <div class="col s12">
                <p>{{title}}</p>
            </div>
            
            <div class="col s12">
                <p>{{user.username}}</p>
            </div>
        </div>
    </div>
</a>
